header
  kind: fill fixed
  z-index: 9

  height: 3*$m
  padding: 0 15*$m

  background: rgba(#FFF, 0.8)

header nav
  display: block

  max-width: 42*$m
  margin: 0 auto 5*$m

header h1
  reset: h1

  position: absolute
  top: 0
  left: 0
  z-index: 9

  width: 14*$m

  & > span,
  & > a
    display: block

    padding: $m

    font-size: 2*$m
    line-height: $m


