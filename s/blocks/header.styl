header
  max-width: 42em
  margin: 0 auto 5em

header h1
  reset: h1

  position: fixed
  top: 0
  left: 0
  z-index: 9

  width: 14*$s

  overflow: scroll
  visibility: hidden

  & > span,
  & > a
    display: block
    visibility: visible

    padding: $s

    font-size: 2*$s
    line-height: $s

    background: rgba(#FFF, 0.8)

